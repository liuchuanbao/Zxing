<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#dcdcdc"
    tools:context=".EarTagActivity">
   <TextView
       android:layout_width="match_parent"
       android:layout_height="60dp"
       android:background="#3F51B5"
       android:text="耳标扫码"
       android:textSize="25sp"
       android:gravity="center|left"
       android:textColor="@color/white"
       android:paddingLeft="10dp"
       />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/white"
        >
        <TextView
            android:text="请选择畜种："
         style="@style/ear_text"
            />
           <TextView
               android:id="@+id/text_name"
               android:text="猪"
               android:layout_toLeftOf="@+id/img_right"
               style="@style/ear_text"/>
        <ImageView
            android:id="@+id/img_right"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_next"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/earnumber"
            android:text="耳标号："
            style="@style/ear_text"
            />
        <EditText
            android:id="@+id/text_number"
            android:text=""
            android:singleLine="true"
            android:layout_width="240dp"
            android:maxLength="20"
            android:background="@null"
            android:layout_toRightOf="@+id/earnumber"
            style="@style/ear_text"/>
        <ImageView
            android:id="@+id/img_camer"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/xiangji"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="耳标信息解析："
        android:textSize="25sp"
        android:gravity="center|left"
        android:textColor="#303F9F"
        android:paddingLeft="10dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/animalVesion"
            android:text="动物种类："
            style="@style/ear_text"
            />
        <TextView
            android:id="@+id/ed_version"
            android:text=""
            android:layout_toRightOf="@+id/animalVesion"
            style="@style/ear_text"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/animalchandi"
            android:text="原产地市县："
            style="@style/ear_text"
            />
        <TextView
            android:id="@+id/ed_chandi"
            android:text=""
            android:background="@null"
            android:layout_toRightOf="@+id/animalchandi"
            style="@style/ear_text"/>
        <TextView
            android:id="@+id/text_province"
            android:text=""
            android:background="@null"
            android:layout_toRightOf="@+id/ed_chandi"
            android:layout_marginLeft="10dp"
            style="@style/ear_text"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/animalnum"
            android:text="产地批序号："
            style="@style/ear_text"
            />
        <TextView
            android:id="@+id/ed_xulie"
            android:text=""
            android:background="@null"
            android:layout_toRightOf="@+id/animalnum"
            style="@style/ear_text"/>

    </RelativeLayout>
</LinearLayout>
